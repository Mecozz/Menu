<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Jimmy's House of Pizza - Menu</title>
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap" rel="stylesheet">
  <style>
    body {
      background: black;
      color: white;
      font-family: 'Open Sans', sans-serif;
      text-align: center;
    }
    .menu-container {
      width: 90%;
      margin: auto;
      padding-top: 10px;
    }
    .menu-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: yellow;
      padding: 15px;
      font-size: 2.5em;
      font-weight: bold;
      width: 100%;
      text-transform: uppercase;
    }
    .menu-header span {
      color: red;
      flex: 1;
      text-align: center;
    }
    .menu-table {
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      text-align: left;
      margin-top: 10px;
    }
    .menu-column {
      width: 49%;
    }
    table {
      width: 100%;
      border-collapse: collapse;
    }
    th, td {
      font-size: 1.8em;
      padding: 8px 15px;
    }
    th {
      text-align: center;
      font-weight: bold;
    }
    .price {
      text-align: right;
    }
    /* Image Slider */
    .image-slider {
      display: flex;
      justify-content: space-evenly;
      align-items: center;
      margin-top: 15px;
      width: 100%;
      padding-bottom: 10px;
    }
    .image-slider img {
      width: 14%;
      height: 120px;
      object-fit: cover;
      border-radius: 10px;
      transition: opacity 1s ease-in-out;
    }
  </style>
</head>
<body>

  <div class="menu-container">
    <!-- Header -->
    <div class="menu-header">
      <span>PIZZA</span>
      <span>CALZONES</span>
    </div>
    
    <div class="menu-table">
      <!-- Pizza Section -->
      <div class="menu-column">
        <table>
          <tr><th>Item</th><th>LG 14"</th><th>REG 10"</th></tr>
          <tr><td>PLAIN</td><td class="price">13.00</td><td class="price">9.00</td></tr>
          <tr><td>ONIONS</td><td class="price">15.00</td><td class="price">11.00</td></tr>
          <tr><td>PEPPERS</td><td class="price">15.00</td><td class="price">11.00</td></tr>
          <tr><td>HAMBURG</td><td class="price">15.00</td><td class="price">11.00</td></tr>
          <tr><td>PEPPERONI</td><td class="price">15.00</td><td class="price">11.00</td></tr>
          <tr><td>HAM</td><td class="price">15.00</td><td class="price">11.00</td></tr>
          <tr><td>MUSHROOM</td><td class="price">15.00</td><td class="price">11.00</td></tr>
          <tr><td>SAUSAGE</td><td class="price">15.00</td><td class="price">11.00</td></tr>
          <tr><td>MEATBALLS</td><td class="price">16.00</td><td class="price">12.00</td></tr>
          <tr><td>BACON</td><td class="price">16.00</td><td class="price">12.00</td></tr>
        </table>
      </div>

      <!-- Calzones Section -->
      <div class="menu-column">
        <table>
          <tr><th>Item</th><th>LG 14"</th><th>REG 10"</th></tr>
          <tr><td>PLAIN</td><td class="price">16.75</td><td class="price">13.00</td></tr>
          <tr><td>1 ITEM</td><td class="price">18.75</td><td class="price">15.00</td></tr>
          <tr><td>2 ITEMS</td><td class="price">22.00</td><td class="price">16.75</td></tr>
          <tr><td>STEAK SPECIAL</td><td class="price">22.00</td><td class="price">16.75</td></tr>
          <tr><td>CHICKEN</td><td class="price">22.00</td><td class="price">16.75</td></tr>
          <tr><td>SPINACH & FETA</td><td class="price">22.00</td><td class="price">16.75</td></tr>
          <tr><td>MEATBALL</td><td class="price">22.00</td><td class="price">16.75</td></tr>
          <tr><td>HAM & PINEAPPLE</td><td class="price">22.00</td><td class="price">16.75</td></tr>
          <tr><td>HOUSE SPECIAL</td><td class="price">23.00</td><td class="price">16.75</td></tr>
          <tr><td>BACON OR GYRO</td><td class="price">23.00</td><td class="price">16.75</td></tr>
          <tr><td>MEAT LOVERS</td><td class="price">23.00</td><td class="price">17.75</td></tr>
          <tr><td>EXTRA CHEESE</td><td class="price">3.00</td><td class="price">2.50</td></tr>
        </table>
      </div>
    </div>

    <!-- Image Slider -->
    <div class="image-slider">
      <img src="" id="img1">
      <img src="" id="img2">
      <img src="" id="img3">
      <img src="" id="img4">
      <img src="" id="img5">
    </div>
  </div>

  <script>
    let imageSets = [
      ["https://github.com/Mecozz/Digital-Menu/blob/main/PIzza1.png?raw=true", "https://github.com/Mecozz/Digital-Menu/blob/main/SubRings.png?raw=true", "https://github.com/Mecozz/Digital-Menu/blob/main/PIzza1.png?raw=true"],  // Slot 1
      ["https://github.com/Mecozz/Digital-Menu/blob/main/Pizza2.png?raw=true", "https://github.com/Mecozz/Digital-Menu/blob/main/Pizza2.png?raw=true", "https://github.com/Mecozz/Digital-Menu/blob/main/Pizza2.png?raw=true"],  // Slot 2
      ["https://github.com/Mecozz/Digital-Menu/blob/main/pizza4.png?raw=true", "https://github.com/Mecozz/Digital-Menu/blob/main/pizza4.png?raw=true", "https://github.com/Mecozz/Digital-Menu/blob/main/pizza4.png?raw=true"],  // Slot 3
      ["https://github.com/Mecozz/Digital-Menu/blob/main/Pizza3.png?raw=true", "https://github.com/Mecozz/Digital-Menu/blob/main/Pizza3.png?raw=true", "https://github.com/Mecozz/Digital-Menu/blob/main/Pizza3.png?raw=true"],  // Slot 4
      ["https://github.com/Mecozz/Digital-Menu/blob/main/Calzone1.png?raw=true", "https://github.com/Mecozz/Digital-Menu/blob/main/Calzone1.png?raw=true", "https://github.com/Mecozz/Digital-Menu/blob/main/Calzone1.png?raw=true"]   // Slot 5
    ];

    let imgElements = document.querySelectorAll(".image-slider img");
    let currentIndexes = new Array(imageSets.length).fill(0);

    function updateImages() {
      imgElements.forEach((img, i) => {
        img.src = imageSets[i][currentIndexes[i]];
        currentIndexes[i] = (currentIndexes[i] + 1) % imageSets[i].length;
      });
    }

    updateImages(); // Initialize images
    setInterval(updateImages, 5000);
  </script>

</body>
</html>
