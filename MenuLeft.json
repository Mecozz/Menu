<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Jimmy's House of Pizza - Left Menu</title>
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap" rel="stylesheet">
  <style>
    body {
      background: black;
      color: white;
      font-family: 'Open Sans', sans-serif;
      text-align: center;
    }
    .menu-container {
      width: 90%;
      margin: auto;
      padding-top: 10px;
    }
    .menu-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: yellow;
      padding: 15px;
      font-size: 2.5em;
      font-weight: bold;
      text-transform: uppercase;
    }
    .menu-header span {
      color: red;
      flex: 1;
      text-align: center;
    }
    .menu-table {
      width: 100%;
      display: flex;
      justify-content: space-between;
      margin-top: 10px;
    }
    .menu-column {
      width: 49%;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 1.8em;
    }
    th, td {
      padding: 8px 15px;
      text-align: left;
    }
    .price {
      text-align: right;
    }
    .image-slider {
      display: flex;
      justify-content: space-evenly;
      margin-top: 15px;
      padding-bottom: 10px;
    }
    .image-slider img {
      width: 14%;
      height: 120px;
      object-fit: cover;
      border-radius: 10px;
      transition: opacity 1s ease-in-out;
    }
  </style>
</head>
<body>

<div class="menu-container">
  <div class="menu-header">
    <span id="left-category"></span>
    <span id="right-category"></span>
  </div>
  <div class="menu-table">
    <div class="menu-column">
      <table>
        <thead><tr><th>Item</th><th class="price">LG 14"</th><th class="price">REG 10"</th></tr></thead>
        <tbody id="left-items"></tbody>
      </table>
    </div>
    <div class="menu-column">
      <table>
        <thead><tr><th>Item</th><th class="price">LG 14"</th><th class="price">REG 10"</th></tr></thead>
        <tbody id="right-items"></tbody>
      </table>
    </div>
  </div>
  <div class="image-slider">
    <img id="img0"><img id="img1"><img id="img2"><img id="img3"><img id="img4">
  </div>
</div>

<script>
fetch('https://raw.githubusercontent.com/Mecozz/Menu/main/MenuLeft.json')
  .then(response => response.json())
  .then(data => {
    document.getElementById('left-category').textContent = data.header.left_category;
    document.getElementById('right-category').textContent = data.header.right_category;

    let leftHTML = data.left_items.map(item => `
      <tr><td>${item.name}</td><td class="price">${item.lg_price}</td><td class="price">${item.reg_price}</td></tr>
    `).join('');
    document.getElementById('left-items').innerHTML = leftHTML;

    let rightHTML = data.right_items.map(item => `
      <tr><td>${item.name}</td><td class="price">${item.lg_price}</td><td class="price">${item.reg_price}</td></tr>
    `).join('');
    document.getElementById('right-items').innerHTML = rightHTML;

    let imageSets = data.images;
    let imgElements = document.querySelectorAll(".image-slider img");
    let currentIndexes = new Array(imageSets.length).fill(0);

    function updateImages() {
      imgElements.forEach((img, i) => {
        img.src = imageSets[i][currentIndexes[i]];
        currentIndexes[i] = (currentIndexes[i] + 1) % imageSets[i].length;
      });
    }
    updateImages();
    setInterval(updateImages, 5000);
  })
  .catch(err => console.error('Error loading menu:', err));
</script>

</body>
</html>
